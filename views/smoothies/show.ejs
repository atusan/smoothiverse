<%- include('../partials/header') %>

<div class="section no-pad-bot" id="index-banner" >
  <div class="container">
    <br><br>
    
    <div class="row">
    
        <div>Name: <br>
       <%= smoothie.name %><br><br>
       
       <br>
       ingredients: 
       <ul class="collection">
       <%- smoothie.items.map(p => 
       `<li class="collection-item"> ${p.name}</li>`
       ).join('') %>
      </ul>
        <br> 
      
        Description: <br>
        <%= smoothie.recipe %>
        </div>
        
        <div class="row right"><i class="material-icons prefix">mode_edit</i> <a href="/smoothies/<%= smoothie._id %>/edit">EDIT</a></div>
   
  <br><br>
  <form id="add-review-form" method="POST" action="/smoothies/<%= smoothie._id %>/reviews">
    <label>Comments:</label>
    <textarea name="content"></textarea>
    <br><br>
    <button class="btn-large waves-effect waves-light orange" type="submit" name="action">COMMENT
      <i class="material-icons right">send</i>
    </button>
  </form>
  <br><br>
    <% if (smoothie.reviews.length) { %>
        <table>
          <thead>
            <tr>
              <th>Date</th>
              <th>Comment</th>
             
            </tr>
          </thead>
          <tbody>
            
            <% smoothie.reviews.forEach(function(r) { %>
              
              <tr>
                <td><%= r.createdAt.toLocaleDateString() %></td>
                <td><%= r.content %></td>
               
              </tr>
            <% }); %>
           
          </tbody>
        </table>
      <% } else { %>
        <h5>No Comments Yet</h5>
      <% } %>
    </div>
  </div>
</div>
</body>
</html>